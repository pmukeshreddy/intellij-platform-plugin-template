<idea-plugin>
    <id>com.sweep.ai.assistant</id>
    <name>SweepAI Assistant</name>
    <vendor>Sweep</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="org.jetbrains.plugins.template.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
        <postStartupActivity implementation="org.jetbrains.plugins.template.SweepStartupActivity" />
        <completion.contributor language="any" implementationClass="org.jetbrains.plugins.template.SweepCompletionContributor" order="first"/>
        <projectService serviceImplementation="org.jetbrains.plugins.template.SweepCompletionService"/>

        <!-- Ghost text components -->
        <projectService serviceImplementation="org.jetbrains.plugins.template.SweepGhostTextService"/>

        <!-- Tab handler override -->
        <editorActionHandler action="EditorTab" implementationClass="org.jetbrains.plugins.template.SweepTabHandler" order="first"/>
    </extensions>

    <applicationListeners>
        <listener class="org.jetbrains.plugins.template.SweepCompletionEditorListener" topic="com.intellij.openapi.editor.EditorFactoryListener"/>
    </applicationListeners>

    <actions>
        <action id="SweepAcceptGhost"
                class="org.jetbrains.plugins.template.SweepAcceptGhostAction"
                text="Accept AI Suggestion"
                description="Accept the current AI ghost text suggestion">
            <keyboard-shortcut keymap="$default" first-keystroke="alt ENTER"/>
        </action>
    </actions>
</idea-plugin>
